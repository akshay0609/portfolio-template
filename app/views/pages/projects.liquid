---
title: Projects

# true if the page is included in the menu
listed: true

# true if the page is published
published: true

# true if the page can be used as a layout for new pages created by the editors
# is_layout: true

# position among sibling pages
# position: 1

# sets a redirection to the given url (301)
# redirect_url: "<url to a page or to a remote url>"

# other unique identifier of this page. To be used with the path_to liquid tag.
# handle: my-page-handle

# content type that this page is templatizing
# content_type: "<slug of one of the content types>"


# editable_elements:
#   'some_block/some_slug': "<text>"
#   'some_block/some_slug': "<relative path to the file under the public/samples folder>"

# Control the display of the page in the back-office.
# display_settings:
#   hidden: true          # hidden for authors?
---
{% extends 'index' %}

{% block main %}

  <section id='portfolio'>
    <div class='container'>
      {% block portfolio, short_name: true %}
      
      <div class='row'>
        <div class='col-lg-12 text-center'>
          <h2>{% editable_text title, inline: true, rows: 1 %}Portfolio{% endeditable_text %}</h2>
          <hr class='star-primary'>
        </div>
      </div>

      <div class='row'>
      <div class='col-md-12'>
        <div class="carousel slide media-carousel" id="media">
          <div class="carousel-inner">

           {% editable_model "projects", hint: "Displayed in the portfolio" %}
              {% for project in (contents.projects) limit:6 %}
                {% assign project_count  = forloop.index0 | modulo: 3 %}
                {% if project_count < 1 %}
                  {% if forloop.first %}
                   <div class="item active"> 
                    <div class="row">
                  {% else %}
                   <div class="item">
                    <div class="row">
                  {% endif %}  
                {% endif %} 
                <div class="col-md-4 col-sm-4 col-lg-4">
                  <a class='thumbnail' href='/project?name={{ project.name }}'>
                    <!-- <div class='caption'>
                      <div class='caption-content'>
                        <i class='fa fa-search-plus fa-3x'></i>
                      </div>
                    </div> -->
                    <img class='img-responsive' src='{{ project.image.url }}'>
                  </a>   
                </div>  
                {% if project_count > 1 %}
                    </div>
                  </div>
                {% endif %} 
              {% endfor %}
            {% endeditable_model %}
          </div>  
          <a class="left carousel-control" href="#media" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#media" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>                        
        </div>
      </div>
      </div>
      {% endblock %}
    </div>
  </section>

{% endblock %}
